{
  "expo": {
    "name": "track-expenses",
    "slug": "track-expenses",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/xpense-icon.png",
    "scheme": "trackexpenses",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/xpense-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@react-native-community/datetimepicker",
        {
          "android": {
            "datePicker": {
              "colorAccent": {
                "light": "#7c3aed"
              },
              "textColorPrimary": {
                "light": "#7c3aed"
              }
            },
            "timePicker": {
              "background": {
                "light": "#FF5722",
                "dark": "#383838"
              },
              "numbersBackgroundColor": {
                "light": "#FF5722",
                "dark": "#383838"
              }
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}